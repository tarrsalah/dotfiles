(in-package :stumpwm)

(set-prefix-key (kbd "C-e"))
(define-key *root-map* (kbd "C-e") "windowlist")

(defcommand firefox () ()
  "Start Firefox or switch to it, if it is already running."
  (run-or-raise "firefox" '(:class "Firefox")))
(define-key *root-map* (kbd "f") "firefox")

(defcommand terminal () ()
        "Start a Sakura instance or switch to it, if ti is already running."
        (run-or-raise "sakura" '(:instance "sakura")))
(define-key *root-map* (kbd "c") "terminal")

(run-shell-command "setxkbmap -option compose:ralt")
(run-shell-command "setxkbmap -layout us,ar -option grp:alt_space_toggle")
